<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
	</PropertyGroup>

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PackageId>NugetLookup</PackageId>
		<Version>1.0.0</Version>
		<Authors>Torbjörn Lamberg</Authors>
		<Product>NugetLookup Middleware</Product>
		<Description>This package provides middleware to return NuGet dependencies information as JSON.</Description>
		<PackageTags>nuget lookup .net middleware</PackageTags>
		<RepositoryUrl>https://github.com/toojla/NugetLookup</RepositoryUrl>
		<PackageReadmeFile>README.md</PackageReadmeFile>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="2.2.0" />
	</ItemGroup>

	<ItemGroup>
		<None Include="README.md" Pack="true" PackagePath="\" />
	</ItemGroup>

</Project>
